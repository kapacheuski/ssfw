{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "nrf-connect",
			"request": "launch",
			"name": "Launch beacon",
			"config": "${workspaceFolder}/dev/beacon/build/beacon",
			"runToEntryPoint": "main"
		},
		{
			"name": "Debug sstest",
			"type": "cortex-debug",
			"request": "launch",
			"servertype": "openocd",
			"cwd": "${workspaceFolder}",
			"executable": "${workspaceFolder}/dev/sstest/build/sstest/zephyr/zephyr.elf",
			"device": "nrf52",
			"configFiles": [
				"interface/stlink.cfg",
				"target/nrf52.cfg"
			],
			"preLaunchTask": "build-sstest",
			//"runToEntryPoint": "main",
			"svdFile": "",
			"showDevDebugOutput": "raw",
		},
		// debug coap_client
		{
			"name": "Debug coap_client",
			"type": "cortex-debug",
			"request": "launch",
			"servertype": "openocd",
			"cwd": "${workspaceFolder}",
			"executable": "${workspaceFolder}/dev/coap_client/build/coap_client/zephyr/zephyr.elf",
			"device": "nrf52",
			"configFiles": [
				"interface/stlink.cfg",
				"target/nrf52.cfg"
			],
			"preLaunchTask": "build-coap_client",
			//"runToEntryPoint": "main",
			"svdFile": "",
			"showDevDebugOutput": "raw",
		}
	]
}